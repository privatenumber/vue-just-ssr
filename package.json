{
  "name": "vue-just-ssr",
  "version": "0.0.0-semantic-release",
  "description": "Instantly add a Vue SSR dev-env to your repo",
  "keywords": [
    "vue",
    "ssr",
    "cli",
    "webpack"
  ],
  "license": "MIT",
  "repository": "privatenumber/vue-just-ssr",
  "author": "Hiroki Osame <hiroki.osame@gmail.com>",
  "files": [
    "bin",
    "lib"
  ],
  "main": "lib/index.js",
  "bin": {
    "just-ssr": "bin/just-ssr.js"
  },
  "scripts": {
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "dependencies": {
    "@vue-reactivity/watch": "^0.1.2",
    "@vue/reactivity": "^3.0.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "connect": "^3.7.0",
    "consola": "^2.15.0",
    "etag": "^1.8.1",
    "get-port": "^5.1.1",
    "has-own-prop": "^2.0.0",
    "lodash": "^4.17.20",
    "memfs": "^3.2.0",
    "minimist": "^1.2.5",
    "opn": "^6.0.0",
    "terminal-link": "^2.1.1",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^2.5.2",
    "webpackbar": "^4.0.0"
  },
  "peerDependencies": {
    "vue": "^2.0.0",
    "vue-server-renderer": "^2.0.0",
    "webpack": "^4.0.0"
  },
  "devDependencies": {
    "@pvtnbr/eslint-config-base": "^0.1.8",
    "eslint": "^7.18.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "vue": "^2.0.0",
    "vue-server-renderer": "^2.0.0",
    "webpack": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "@pvtnbr/eslint-config-base",
    "overrides": [{
      "files": "**/src/*.js",
      "rules": {
        "import/no-unresolved": ["error", {
          "commonjs": true,
          "caseSensitive": true,
          "ignore": [
            "_just-ssr-app",
            "create-app"
          ]
        }]
      }
    }]
  }
}
